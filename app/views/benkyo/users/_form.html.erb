<%= form_for :user, url: users_path, html: {class: 'pure-form pure-form-stacked'} do |f| %>
  <div class="form-div">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="form-div">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="form-div">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="form-div">
    <% if @user.new_record? %>
      <%= f.submit "Sign up", class: 'pure-button' %>
    <% else %>
      <%= f.submit "Save Changes", class: 'pure-button' %>
    <% end %>
  </div>
<% end %>
