<!DOCTYPE html>
<html>
<head>
  <title>Studycard3</title>
  <%= stylesheet_link_tag 'application', media: 'all',
                          'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Montserrat'
    rel='stylesheet' type='text/css'>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <div id="layout">
      <!-- Menu toggle -->
      <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <span></span>
      </a>

      <div id="menu">
        <div class="pure-menu">
          <a class="pure-menu-heading" href="/">StudyCard</a>

          <ul class="pure-menu-list">
            <% if session[:user_id] %>
              <li class="pure-menu-item">
                <%= link_to 'Sign Out', session_path(session),
                            method: :delete, class: 'pure-menu-link' %>
              </li>
              <li class="pure-menu-item">
                <a href="/decks" class="pure-menu-link">Decks</a>
              </li>
            <% else %>
              <li class="pure-menu-item">
                <%= link_to 'Sign In', new_session_path,
                              class: 'pure-menu-link' %>
              </li>
              <li class="pure-menu-item">
                <a href="/users/new" class="pure-menu-link">New Account</a>
              </li>
            <% end %>

            <li class="pure-menu-item menu-item-divided">
              <a href="#" class="pure-menu-link" >About</a>
            </li>
          </ul>
        </div>
      </div>

      <div id="main" class="centered">
        <%  unless flash[:message].nil?  %>
          <div id="flash_message">
            <%= flash[:message] %>
          </div>
        <% end %>

        <%= yield %>

      </div>
    </div>
    
  <script src="/js/ui.js"></script>
</body>
</html>
